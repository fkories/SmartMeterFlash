<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comfkoriessmartmeterflash.httpsgithub.smartmeterflash.MainActivity">

    <Button
        android:id="@+id/submitPIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="blink"
        android:text="Ãœbertrage"
        app:layout_constraintBaseline_toBaselineOf="@+id/pin"
        app:layout_constraintLeft_toRightOf="@+id/pin"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/enter_pin"
        android:inputType="numberPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/submitPIN"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="blinkOne"
        android:text="Weiter"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/pin"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/submitPIN" />

</android.support.constraint.ConstraintLayout>
